# --- CONFIGURATION ---
# reload sxhkd configuration
## Nomral
super + Escape
	pkill -USR1 -x sxhkd

## Moonlander
ctrl + shift + alt + super + r
	pkill -USR1 -x sxhkd

# --- APPLICATIONS ---
# terminal
super + Return 
	kitty

super + Tab
	kitty

# browser and common applications
## Normal
super + {6,7,8,9,0,minus} 
	{spotify, floorp, discord, steam, obsidian, keepassxc}

## Moonlander
ctrl + shift + alt + super + {h,j,k,l,semicolon,apostrophe}
	{spotify, floorp, discord, steam, obsidian, keepassxc}
	
# application launcher
super + @space 
	rofi -no-config -no-lazy-grab -show drun -modi drun -theme ~/.config/polybar/scripts/rofi/launcher.rasi

# screenshot
Print 
	flameshot gui

# --- SYSTEM CONTROLS ---
# powermenu
## Normal
super + ctrl + Escape 
	~/.config/polybar/scripts/powermenu.sh

## Moonlander
ctrl + shift + alt + super + p
	~/.config/polybar/scripts/powermenu.sh

# --- AUDIO CONTROLS ---
# increase volume
{XF86AudioRaiseVolume, super + shift + equal}
    wpctl set-volume @DEFAULT_SINK@ 5%+

# decrease volume
{XF86AudioLowerVolume, super + shift + minus}
    wpctl set-volume @DEFAULT_SINK@ 5%-

# mute volume
{XF86AudioMute, super + shift + m}
    wpctl set-mute @DEFAULT_SINK@ toggle

# media player controls
XF86AudioPlay
    playerctl play-pause

super + XF86AudioPlay
	playerctl -a stop

XF86AudioPrev
    playerctl previous

XF86AudioNext
    playerctl next

# --- BSPWM SESSION MANAGEMENT ---
# quit/restart bspwm
## Normal
super + shift + Escape + r
	bspc {quit,wm -r}

# --- WINDOW MANAGEMENT ---
# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# swap the current node and the biggest node
super + g
	bspc node -s biggest.local

# --- WINDOW STATE/FLAGS ---
# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# --- FOCUS AND NAVIGATION ---
# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous desktop in the current monitor
super + {less,greater}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
alt + Tab
	bspc node -f last

alt + shift + Tab
	bspc desktop -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
## Normal
super + {_,shift + }{1-4,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

## Moonlander
# desktop focus 
ctrl + shift + alt + super + {a,s,d,f}
	bspc desktop -f '^{1-4}'

# send desktop
super + shift + {a,s,d,f}
	bspc node -d '^{1-4}'

# --- PRESELECTION ---
# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# --- MOVE AND RESIZE ---
# expand a window by moving one of its side outward
ctrl + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
ctrl + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
ctrl + alt + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
